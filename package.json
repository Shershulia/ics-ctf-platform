{
  "name": "next-ctf-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "test": "jest --ignore=categories.test.tsx",
    "dev:test": "dotenv -e .env.test -- next dev",
    "build": "prisma generate && next build",
    "dev:all-services": "npm run db:dev:restart && npm run services && next dev",
    "start": "next start",
    "lint": "next lint",
    "services" : "docker compose up gostwire test-vm edgeshark -d",
    "db:dev:up": "docker compose up db -d",
    "db:dev:rm": "docker compose rm db -s -f -v",
    "prisma:db:deploy": "prisma migrate deploy",
    "db:dev:restart": "npm run db:dev:rm && npm run db:dev:up && node -e \"setTimeout(() => {}, 3000)\" && npm run prisma:db:deploy  && npm run prisma:seed",
    "prisma:seed": "prisma db seed",
    "db:test:up": "docker compose up test-db -d",
    "db:test:rm": "docker compose rm test-db -s -f -v",
    "testw": "jest --watch",
    "prisma:test:deploy": "dotenv -e .env.test -- prisma migrate deploy",
    "db:test:restart": "npm run db:test:rm && npm run db:test:up && node -e \"setTimeout(() => {}, 3000)\" && npm run prisma:test:deploy && npm run test"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@nextui-org/react": "^2.2.9",
    "@prisma/client": "^5.10.2",
    "axios": "^1.6.7",
    "framer-motion": "^11.0.5",
    "next": "13.5.4",
    "next-cookies": "^2.0.3",
    "pactum": "^3.6.3",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.0.1",
    "react-toastify": "^10.0.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^14.2.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/testing-library__jest-dom": "^6.0.0",
    "autoprefixer": "^10",
    "dotenv": "^16.4.5",
    "eslint": "^8",
    "eslint-config-next": "13.5.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prisma": "^5.10.2",
    "tailwindcss": "^3",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
