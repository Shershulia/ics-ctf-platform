{
  "name": "next-ctf-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "prisma db seed",
    "test": "jest",
    "test:watch": "jest --watch",

    "db:test:up": "docker compose up test-db -d",
    "db:test:rm": "docker compose rm test-db -s -f -v",
    "prisma:test:deploy": "dotenv -e .env.test -- prisma migrate deploy",
    "db:test:restart": "npm run db:test:rm && npm run db:test:up && node -e \"setTimeout(() => {}, 3000)\" && npm run prisma:test:deploy",

    "pretest:db": "npm run db:test:restart",
    "test:db": "dotenv -e .env.test -- jest --watch --no-cache"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@nextui-org/react": "^2.2.9",
    "@prisma/client": "^5.10.2",
    "axios": "^1.6.7",
    "dotenv-cli": "^7.4.1",
    "framer-motion": "^11.0.5",
    "next": "13.5.4",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^14.2.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "eslint": "^8",
    "eslint-config-next": "13.5.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prisma": "^5.10.2",
    "tailwindcss": "^3",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
