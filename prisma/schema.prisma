generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Category{
  id          Int        @id @default(autoincrement())
  name    String   @unique
  problems Problem[]

}
model Difficulty{
  id          Int        @id @default(autoincrement())
  name    String   @unique
  problems Problem[]
}
model Problem {
  id          Int        @id @default(autoincrement())
  title    String   @unique
  description   String
  points Int
  attached_file String[]

  categoryId Int
  category Category @relation(fields: [categoryId], references: [id])

  difficultyId Int
  difficulty Difficulty @relation(fields: [difficultyId], references: [id])
}